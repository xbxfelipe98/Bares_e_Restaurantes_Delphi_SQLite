unit Principal;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs, FMX.Objects,
  FMX.Layouts, FMX.StdCtrls, FMX.Controls.Presentation, FMX.Ani,
  FMX.ListView.Types, FMX.ListView.Appearances, FMX.ListView.Adapters.Base,
  FMX.ListView;

type
  TfrmPrincipal = class(TForm)
    layPrincipal: TLayout;
    layTopo: TLayout;
    Rectangle2: TRectangle;
    btnLista: TButton;
    layMenu: TLayout;
    Rectangle4: TRectangle;
    btnTelaPricipal: TButton;
    Button1: TButton;
    bttnProdutos: TButton;
    btnMesas: TButton;
    btnClientes: TButton;
    btnRelatorios: TButton;
    layLista: TLayout;
    ListView1: TListView;
    layBot: TLayout;
    Rectangle3: TRectangle;
    Button2: TButton;
    btnExcluir: TButton;
    btnEditar: TButton;
    procedure Button1Click(Sender: TObject);
    procedure Rectangle1Click(Sender: TObject);
    procedure btnUsuariosClick(Sender: TObject);
    procedure btnListaClick(Sender: TObject);

  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmPrincipal: TfrmPrincipal;

implementation

{$R *.fmx}

uses Usuarios;

procedure TfrmPrincipal.btnListaClick(Sender: TObject);
begin
  if (layMenu.Visible = false) then
  begin
    layMenu.Visible := true;


  end
  else
  begin
    layMenu.Visible := false;

  end;
end;

procedure TfrmPrincipal.btnUsuariosClick(Sender: TObject);
begin
  frmUsuarios := TfrmUsuarios.Create(Self);
  frmUsuarios.Show;
  Close;

end;

procedure TfrmPrincipal.Button1Click(Sender: TObject);
begin
  if (layMenu.Visible = false) then
  begin
    layMenu.Visible := true;
    {FloatAnimation1.Inverse := False;
    FloatAnimation1.StartValue := - 200;
    FloatAnimation1.StopValue := 0 ;
    FloatAnimation1.Start; }

  end
  else
  begin
    layMenu.Visible := false;

  end;
end;



procedure TfrmPrincipal.Rectangle1Click(Sender: TObject);
begin
  if (lMenu.Visible = true) then
  begin
    lmenu.Visible := false;
  end;

end;
end.
